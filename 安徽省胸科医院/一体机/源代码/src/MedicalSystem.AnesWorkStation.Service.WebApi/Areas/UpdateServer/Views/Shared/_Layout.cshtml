<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!-- 避免IE使用兼容模式 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="renderer" content="webkit">
    <meta name="keywords" content='' />
    <meta name="description" content='自动更新管理后台' />
    <title>自动更新管理后台</title>
    <!-- 浏览器标签图片 -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" />
    <!-- FontAwesome字体图标 -->
    <link type="text/css" href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Content/easyui/jquery.min.js"></script>
    <script src="~/Content/easyui/jquery.easyui.min.js"></script>
    <script src="~/Content/easyui/jquery.easyui.mobile.js"></script>
    <script src="~/Content/easyui/easyloader.js"></script>
    <script src="~/Content/easyui/locale/easyui-lang-zh_CN.js"></script>

    @Styles.Render("~/Content/easyui/css")
    @Scripts.Render("~/Content/easyui/jquery")
    @Scripts.Render("~/Content/bootstrap/scrpit")

    <script src="~/Scripts/index.js"></script>
    <style>
        .banner {
            width: 100%;
            height: 50px;
            color: rgb(255, 255, 255);
            background: rgb(60, 141, 188);
            color: white;
        }

            .banner .webname {
                width: 215px;
                font-weight: bold;
                font-size: 20px;
                line-height: 25px;
                text-align: left;
                padding-left: 10px;
                padding-top: 11px;
                float: left;
            }

            .banner a {
                color: white;
            }

        #left_memu ul {
            margin-left: -40px;
        }

        #left_memu li {
            list-style: none;
            margin: 0;
        }

        #left_memu a {
            display: block;
            color: #585858;
            text-decoration: none;
            width: 100%;
            height: 30px;
            text-align: center;
            font: 14px "宋体";
            padding-top: 8px;
            text-align: left;
        }

            #left_memu a:hover {
                background-color: #ebebeb;
            }

        .menuli a {
            background-color: #ebebeb;
        }
    </style>
</head>

<body class="easyui-layout">
    <div data-options="region:'north',border:false" class="banner">
        <div class="webname"><span class="fa fa-envira" style="font-size:26px; padding-right:8px;"></span>自动更新后台管理</div>
        <span style="float: right; padding-right: 10px; height: 50px; line-height: 50px;">
            <a href="#" class="easyui-linkbutton" data-options="plain:true">管理员</a>|
            <a href="javascript:void(0)" id="mb3" class="easyui-menubutton"
               data-options="menu:'#mm3',iconCls:'fa fa-cog',hasDownArrow:true" style="color:#fff;">设置</a>
            <div id="mm3" style="width:74px;">
                <div data-options="iconCls:'fa fa-info-circle'" onclick="javascript:void(0)">个人信息</div>
                <div class="menu-sep"></div>
                <div data-options="iconCls:'fa fa-key'" onclick="javascript:modifyPwd(0)">修改密码</div>
            </div>|
            <a href="javascript:void(0)" onclick="logout()" class="easyui-menubutton"
               data-options="iconCls:'fa fa-sign-out',hasDownArrow:false" style="color:#fff;">注销</a>
        </span>
    </div>
    <div data-options="region:'west',split:true,title:'菜单'" style="width:200px;padding:5px 0 5px 0;">
        <div id="left_memu">
            <ul>
                <li><a href="#" onclick="addTab(this, '发布版本', '/UpdateServer/Publish/index')">&nbsp;&nbsp;发布版本</a></li>
                <li><a href="#" onclick="addTab(this, '版本管理', '/UpdateServer/Version/Index')">&nbsp;&nbsp;版本管理</a></li>
                <li><a href="#" onclick="addTab(this, '更新记录查询', '/UpdateServer/VerUpdateRec/VerUpdateAllView')">&nbsp;&nbsp;更新记录查询</a></li>
                <li><a href="#" onclick="addTab(this, '应用程序管理', '/UpdateServer/App/List')">&nbsp;&nbsp;应用程序管理</a></li>
                @*<li><a href="#" onclick="addTab(this, '系统配置', '/UpdateServer/SystemManagement/Index')">&nbsp;&nbsp;系统配置</a></li>*@
            </ul>
        </div>
    </div>
    <div data-options="region:'center'">
        <div id="center" class="easyui-tabs" data-options="fit:true,border:false">
            <div id="divTitleBar" title="首页" data-options="href:'/UpdateServer/Main/Helper'">
                @RenderBody()
            </div>
        </div>
    </div>
    <div data-options="region:'south',border:false" style="height:30px;padding:2px;">
        <div data-options="region:'south',border:true"
             style="text-align:center;height:30px;line-height:30px;border-bottom:0;overflow:hidden;">
            <span style="float:left;padding-left:5px;width:30%;text-align: left;">当前用户：管理员</span>
            <span style="padding-right:5px;width:40%">
                版权所有 © 2018

            </span>
            <span style="float:right;padding-right:5px;width:30%;text-align: right;">

            </span>
        </div>
    </div>


    <div id="pwdDialog" class="easyui-window"
         data-options="title: '修改密码',
          modal:true,closed:true,
      iconCls:'fa fa-key',
      width: 400,
      height: 300,
      href: '/html/user/modifyPassword.html'"></div>
</body>
</html>