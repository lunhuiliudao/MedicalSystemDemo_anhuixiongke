
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/UpdateServer/Views/Shared/_Page.cshtml";
}

<table id="dg" class="easyui-datagrid" title="" style="width:100%;height:100%"
       data-options="rownumbers:true,singleSelect:true,pagination:true,pageSize:10,toolbar:'#tb'">
    <thead>
        <tr>
            <th data-options="field:'APP_KEY',width:120">主键号</th>
            <th data-options="field:'APP_NAME',width:150">名称</th>
            <th data-options="field:'DESCRIPTION',width:250,align:'left',formatter:formatCellTooltip">描述</th>
            <th data-options="field:'CREATER',width:120">创建人</th>
            <th data-options="field:'CREATE_TIME',width:120,formatter:dateTime">创建时间</th>
            <th data-options="field:'MODIFYER',width:120">修改人</th>
            <th data-options="field:'MODIFY_TIME',width:120,formatter:dateTime">修改时间</th>
        </tr>
    </thead>
</table>
<div id="tb" style="padding:5px;height:auto">
    <div style="margin-bottom:5px">
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="winOpen('新增应用程序', 800, 500, '/UpdateServer/App/MoidfyView', null, null)">新增</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="winOpen('修改应用程序', 800, 500, '/UpdateServer/App/MoidfyView','#dg','APP_ID')">修改</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-cancel" plain="true" onclick="TipSubmitAjax('确定要删除应用程序？', '/UpdateServer/App/Delete', '#dg', 'APP_ID')" title="应用程序只能删除没有版本记录的">删除</a>
    </div>
</div>

<script type="text/javascript">
    function getData() {
        var jsonurl = "/UpdateServer/App/GetList";
        var data = "";
        $.ajax({
            url: jsonurl,
            async: false,
            type: "post",
            success: function (json) {
                data = json;
            }
        });
        return data;
    }
</script>

