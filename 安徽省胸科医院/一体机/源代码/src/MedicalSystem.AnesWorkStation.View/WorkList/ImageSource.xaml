             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             x:Name="main">
    <Grid>
        <Image x:Name="curImage" Width="{Binding ElementName=main, Path=ActualWidth}" Height="{Binding ElementName=main, Path=ActualHeight}"
               Source="/MedicalSystem.AnesWorkStation.View;component/WorkList/Assets/icon/iconR.fw.png" />   
    </Grid>
</UserControl>
